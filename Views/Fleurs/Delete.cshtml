@model BoutiqueFleurs.Models.Fleur

@{
    ViewData["Title"] = "Supprimer une Fleur";
}

<h1>Supprimer une Fleur</h1>

<h3>Êtes-vous sûr de vouloir supprimer cette fleur ?</h3>
<div>
    <h4>Fleur</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomF)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Couleurs)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Couleurs)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrixF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrixF) €
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>